<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:background="#B3DFDFDF"
                android:ems="10"
                android:fontFamily="@font/font1"
                android:gravity="center"
                android:text="탑승 예정 정류장"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHighlight="#706E6E"
                android:textSize="24dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/result_st_nb"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:ems="10"
                android:fontFamily="@font/font1"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:background="#B3DFDFDF"
                android:ems="10"
                android:fontFamily="@font/font1"
                android:gravity="center"
                android:text="탑승 예정 버스 번호"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/result_bnum_nb"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:ems="10"
                android:fontFamily="@font/font1"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.35"
                android:background="#B3DFDFDF"
                android:ems="10"
                android:fontFamily="@font/font1"
                android:gravity="center"
                android:text="탑승 예정 버스 도착 정보"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/result_arrmsg_nb"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.65"
                android:ems="10"
                android:fontFamily="@font/font1"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:background="#B3DFDFDF"
                android:ems="10"
                android:fontFamily="@font/font1"
                android:gravity="center"
                android:text="탑승 예정 버스 혼잡도"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/result_reride_nb"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:ems="10"
                android:fontFamily="@font/font1"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="90dp"
            android:layout_weight="0.15"
            android:orientation="horizontal"
            android:weightSum="1">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.12" />

            <Button
                android:id="@+id/back_nb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.32"
                android:fontFamily="@font/font1"
                android:gravity="center"
                android:text="뒤로가기"
                android:textAlignment="center"
                android:textSize="18dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.12" />

            <Button
                android:id="@+id/ok_signal_nb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.32"
                android:fontFamily="@font/font1"
                android:gravity="center"
                android:text="탑승확정"
                android:textAlignment="center"
                android:textSize="18dp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.12" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>